@model StudentSearchViewModel

@{
    ViewData["Title"] = "Student List";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" class="form-control" name="name" placeholder="Name" value="@Model.Name" />
    </div>

    <div class="col-md-3">
        <input type="number" step="0.01" class="form-control" name="minHeight" placeholder="Min Height" value="@Model.MinHeight" />
    </div>

    <div class="col-md-3">
        <input type="number" step="0.01" class="form-control" name="maxHeight" placeholder="Max Height" value="@Model.MaxHeight" />
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

<table class="table table-sm table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Height</th>
            <th>Date Of Birth</th>
            <th style="max-width: 180px;" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Students.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No students found.</td>
            </tr>
        }
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Height.ToString("0.00")</td>
                <td>@item.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-id="@item.Id"
                            data-name="@item.FirstName @item.LastName"
                            data-url="/Students/Delete/">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Student</a>
@await Html.PartialAsync("_ToastMessagesPartial")
@await Html.PartialAsync("_DeleteConfirmationModalPartial")