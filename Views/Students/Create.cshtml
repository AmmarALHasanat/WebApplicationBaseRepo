@model Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>

        <div class="card-body pt-3">
            @if (TempData["msg"] is string msg)
            {
                <div class="alert alert-success">@msg</div>
            }
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
            <form asp-action="Create" method="post" class="row g-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" autocomplete="given-name" />
                        <label asp-for="FirstName"></label>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" autocomplete="family-name" />
                        <label asp-for="LastName"></label>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Height" type="number" step="0.01" min="0" class="form-control" placeholder="Height" />

                        <label asp-for="Height"></label>
                    </div>
                    <span asp-validation-for="Height" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Weight" type="number" step="0.01" class="form-control" placeholder="Weight" />
                        <label asp-for="Weight"></label>
                    </div>
                    <span asp-validation-for="Weight" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                        <label asp-for="DateOfBirth"></label>
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="StandardId" class="form-select"
                                asp-items="@(new SelectList(ViewBag.standards, "Id", "StandardName"))">
                            <option value="">-- Select Standard --</option>
                        </select>
                        <label asp-for="StandardId"></label>
                    </div>
                    <span asp-validation-for="StandardId" class="text-danger small"></span>
                </div>
                <div class="col-12 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-light border">Cancel</a>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
