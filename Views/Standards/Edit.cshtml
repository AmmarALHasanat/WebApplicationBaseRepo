@model Standard

@{
    ViewData["Title"] = "Edit Standard";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<form asp-action="Edit" method="post" class="d-flex flex-column gap-3">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex flex-column gap-2">
        <label asp-for="StandardName" class="form-label">Standard Name</label>
        <input asp-for="StandardName" class="form-control" placeholder="Enter standard name"/>
        <span asp-validation-for="StandardName" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column gap-2">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter description" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-start mt-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
